<p id="notice"><%= notice %></p>

<p>
  <strong>Barber:</strong>
  <%= @haircut.barber.user.username %>
</p>

<p>
  <strong>Title:</strong>
  <%= @haircut.title %>
</p>

	<% @haircut.haircut_photos.each do |photo| %>
		<%= image_tag photo.name.url(:medium) %>
	<% end %>

<p>
  <strong>View count:</strong>
  <%= @haircut.view_count %>
</p>

<p>
  <strong>Like count:</strong>
  <%= @haircut.like_count %>
</p>

<p>
  <strong>Tags</strong>
  <% @haircut.tags.each do |tag| %>
    <%= tag.title %> |
  <% end %>
</p>

<%= link_to 'Edit', edit_haircut_path(@haircut) %> |
<%= link_to 'Back', haircuts_path %>
